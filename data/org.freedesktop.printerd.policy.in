<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE policyconfig PUBLIC
 "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
 "http://www.freedesktop.org/standards/PolicyKit/1.0/policyconfig.dtd">

<policyconfig>
  <vendor>The printerd Project</vendor>
  <vendor_url>http://printerd.freedesktop.org/</vendor_url>
  <icon_name>printer</icon_name>

  <!-- Operations on printers -->
  <action id="org.freedesktop.printerd.printer-add">
    <_description>Add a printer</_description>
    <_message>Authentication is required to add a printer</_message>
    <defaults>
      <allow_any>auth_admin</allow_any>
      <allow_inactive>auth_admin</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
  </action>

  <action id="org.freedesktop.printerd.job-add">
    <_description>Add a job</_description>
    <_message>Authentication is required to add a job</_message>
    <defaults>
      <allow_any>yes</allow_any>
      <allow_inactive>yes</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
  </action>

</policyconfig>
