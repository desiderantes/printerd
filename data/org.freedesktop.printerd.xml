  <!--
      org.freedesktop.printerd.Manager:
      @short_description: Manager singleton

      Interface for top-level manager singleton object located at the
      object path <literal>/org/freedesktop/printerd/Manager</literal>.
  -->
  <interface name="org.freedesktop.printerd.Manager">
    <!-- Version: The version of the daemon currently running  -->
    <property name="Version" type="s" access="read"/>

    <!--
        AddPrinter:
        @options: Options - known options (in addition to <link linkend="printerd-std-options">standard options</link>) includes <parameter>offset</parameter> (of type 't'), <parameter>size</parameter> (of type 't') and <parameter>read-only</parameter> (of type 'b').
        @resulting_device: An object path to the object implementing the #org.freedesktop.printerd.Block interface.

        Creates a block device for the file represented by @fd.
    -->
    <method name="AddPrinter">
      <arg name="options" direction="in" type="a{sv}"/>
      <arg name="resulting_device" direction="out" type="o"/>
    </method>
  </interface>

  <!--
      org.freedesktop.printerd.Printer:
      @short_description: Printer

      This interface is used to represent printers known by printerd.
  -->
  <interface name="org.freedesktop.printerd.Printer">
    <!-- Vendor: A name for the vendor of the printer or blank if unknown. -->
    <property name="Vendor" type="s" access="read"/>
    <!-- Model: A name for the model of the printer or blank if unknown. -->
    <property name="Model" type="s" access="read"/>
    <!-- Revision: IEEE1284 ID or blank if unknown. -->
    <property name="Ieee1284Id" type="s" access="read"/>
    <!-- Serial: Serial number of the printer or blank if unknown. -->
    <property name="Serial" type="s" access="read"/>

    <!--
        TestPrint:
        @options: Options (currently unused except for <link linkend="printerd-std-options">standard options</link>).

        Prints a test page on the specified device.
    -->
    <method name="TestPrint">
      <arg name="options" direction="in" type="a{sv}"/>
    </method>
  </interface>

  <!-- ********************************************************************** -->

</node>
